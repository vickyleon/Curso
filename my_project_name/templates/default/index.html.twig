{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% set users = [{name: 'John'}, {name: 'Susan'},{name: 'Robert'}] %}
{% set string = "some string \n from \n database" %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ name }}! âœ…</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/Applications/MAMP/htdocs/curso S4/Curso/my_project_name/src/Controller/DefaultController.php'|file_link(0) }}">src/Controller/DefaultController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/Applications/MAMP/htdocs/curso S4/Curso/my_project_name/templates/default/index.html.twig'|file_link(0) }}">templates/default/index.html.twig</a></code></li>
    </ul>

    <ul>
    {% for  user in users if user.name == 'Susan' %}
    <li> {{user.name}} - you won {{random_gift[loop.index0]}} </li>
    {% else %}
        No users where found 
    {% endfor %}
    </ul>



    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div> 
    {% endfor %}


    {% for label,messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    
    {{ include('includes/subview.html.twig',{'users':users} )}}

    {% for i in 1..10 %}
        <div class ="{{ cycle(['even','odd'], i) }}">
        {{i}}
        </div>
    {% endfor %}

    {{ path('default') }}
      <br>
    {{ url('default') }}
      <br>
    {{ asset('images/logo.png') }}
     <br>
     {{ absolute_url(asset('images/logo.png')) }}
      <br>
    <img src="{{ absolute_url(asset('images/logo.png')) }}" alt = "Symfony 4 course" />

    <p> The google tracking code is {{ ga_code }} </p>

</div>


{% endblock %}
{% block javascripts %}
<script>
   
   var route = "{{ string|escape('js') }}";
   alert(route);

</script>
{% endblock %}


